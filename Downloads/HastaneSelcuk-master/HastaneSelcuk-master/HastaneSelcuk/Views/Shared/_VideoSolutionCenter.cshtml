<!-- Video Çözüm Merkezi -->
<div class="container my-5">
    <div class="rounded-4 p-0 overflow-hidden position-relative" style="background: var(--main-blue); min-height: 420px;">
        <div class="py-3 px-4 text-center">
            <h3 class="text-white fw-bold mb-0" style="letter-spacing:0.02em;">VİDEO ÇÖZÜM MERKEZİ</h3>
        </div>
        <div class="px-3 px-md-5 pt-3 pb-5 position-relative">
            <div class="ratio ratio-16x9 rounded-4 overflow-hidden position-relative" style="box-shadow:0 4px 32px rgba(0,0,0,0.08);">
                <video id="hastaneVideo" class="w-100 h-100" controls>
                    <source src="~/images/hastane_video.mp4" type="video/mp4">
                    Tarayıcınız video etiketini desteklemiyor.
                </video>
                <div class="position-absolute top-0 start-0 w-100 h-100" style="background:rgba(0, 80, 120, 0.38); mix-blend-mode: multiply;"></div>
                <button id="videoPlayBtn" class="btn btn-light position-absolute top-50 start-50 translate-middle shadow-lg d-flex align-items-center justify-content-center" style="border-radius:50%; width:80px; height:80px; z-index:2;">
                    <i id="videoPlayIcon" class="fa-solid fa-play fa-2x text-main-blue"></i>
                </button>
            </div>
        </div>
        <div class="row g-4 justify-content-center px-3 px-md-5 pb-4">
            <div class="col-12 col-md-3 d-flex justify-content-center">
                <a href="#" class="d-block text-decoration-none w-100" style="max-width:320px;">
                    <div class="video-tab-card-custom bg-white text-center py-4 px-2 fw-bold text-main-blue position-relative">
                        <div class="video-tab-bar position-absolute top-0 start-0 w-100" style="height:16px; background: var(--main-blue); border-radius:1.2rem 1.2rem 0 0;"></div>
                        <div class="position-relative" style="z-index:2; padding-top:12px;">RANDEVU<br>NASIL ALINIR ?</div>
                    </div>
                </a>
            </div>
            <div class="col-12 col-md-3 d-flex justify-content-center">
                <a href="#" class="d-block text-decoration-none w-100" style="max-width:320px;">
                    <div class="video-tab-card-custom bg-white text-center py-4 px-2 fw-bold text-main-blue position-relative">
                        <div class="video-tab-bar position-absolute top-0 start-0 w-100" style="height:16px; background: var(--main-blue); border-radius:1.2rem 1.2rem 0 0;"></div>
                        <div class="position-relative" style="z-index:2; padding-top:12px;">RANDEVU NASIL<br>İPTAL EDİLİR ?</div>
                    </div>
                </a>
            </div>
            <div class="col-12 col-md-3 d-flex justify-content-center">
                <a href="#" class="d-block text-decoration-none w-100" style="max-width:320px;">
                    <div class="video-tab-card-custom bg-white text-center py-4 px-2 fw-bold text-main-blue position-relative">
                        <div class="video-tab-bar position-absolute top-0 start-0 w-100" style="height:16px; background: var(--main-blue); border-radius:1.2rem 1.2rem 0 0;"></div>
                        <div class="position-relative" style="z-index:2; padding-top:12px; font-size: 1rem;">ÖĞRETİM ÜYESİ<br> ÖZEL MUAYENE RANDEVULARI</div>
                    </div>
                </a>
            </div>
            <div class="col-12 col-md-3 d-flex justify-content-center">
                <a href="#" class="d-block text-decoration-none w-100" style="max-width:320px;">
                    <div class="video-tab-card-custom bg-white text-center py-4 px-2 fw-bold text-main-blue position-relative">
                        <div class="video-tab-bar position-absolute top-0 start-0 w-100" style="height:16px; background: var(--main-blue); border-radius:1.2rem 1.2rem 0 0;"></div>
                        <div class="position-relative" style="z-index:2; padding-top:12px;">HASTA<br>YATIŞ-ÇIKIŞ</div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    const video = document.getElementById('hastaneVideo');
    const playBtn = document.getElementById('videoPlayBtn');
    const playIcon = document.getElementById('videoPlayIcon');

    // Video yüklendiğinde
    video.addEventListener('loadeddata', function() {
      console.log('Video yüklendi');
    });

    // Video yüklenemediğinde
    video.addEventListener('error', function(e) {
      console.error('Video yüklenemedi:', e);
    });

    playBtn.addEventListener('click', function(e) {
      e.preventDefault();
      if (video.paused) {
        video.play()
          .then(() => {
            playIcon.classList.remove('fa-play');
            playIcon.classList.add('fa-pause');
          })
          .catch(err => {
            console.error('Video oynatılamadı:', err);
          });
      } else {
        video.pause();
        playIcon.classList.remove('fa-pause');
        playIcon.classList.add('fa-play');
      }
    });
</script> 